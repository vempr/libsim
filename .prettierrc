{
	"semi": true,
	"singleQuote": true,
	"singleAttributePerLine": true,
	"htmlWhitespaceSensitivity": "css",
	"printWidth": 150,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"tailwindFunctions": [
		"clsx",
		"cn"
	],
	"tabWidth": 2,
	"overrides": [
		{
			"files": "**/*.yml",
			"options": {
				"tabWidth": 2
			}
		}
	],
	"importOrder": [
		"^@core/(.*)$",
		"<THIRD_PARTY_MODULES>",
		"^@server/(.*)$",
		"^@ui/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true
}